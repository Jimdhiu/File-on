 <div class="right-column">
  <div class="first-block">
    <h1>Find all your data</h1>
    <p>Authorize these app just below to import automatically all your files </p>
    <div class="panel-group first-child" id="accordion" role="tablist" aria-multiselectable="true">
      <% @categories.each do |category| %>
        <div class="panel panel-default">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= category.id %>" aria-expanded="true" aria-controls="collapse<%= category.id %>">
            <div class="panel-heading" role="tab" id="headingOne">
              <h4 class="panel-title text-center">
                  <%= category.name %> - <%= category.complete_for?(current_user) %>
              </h4>
            </div>
          </a>
          <div id="collapse<%= category.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="panel-body">
              <div class="panel-group first-child" id="accordion<%= category.id %>" role="tablist" aria-multiselectable="true">
                <% category.tags.each do |tag| %>
                  <% if tag.number_of_uploads < 4 %>
                      <%= link_to tag.name, "#tag#{tag.id}", data: { toggle: "modal"} %> - <%= tag.complete_for?(current_user) %>
                    <br>
                    <% current_user.documents.where(tag: tag).each do |document| %>
                      <%= render 'modal', tag: tag, document: document  %>
                      <%= "Absent or expired document" if document.expiration_date? %>

                    <% end %>
                    <br>
                  <% else %>
                    <div class="panel panel-default">
                      <a role="button" data-toggle="collapse" data-parent="#accordion<%= category.id %>" href="#collapse_tag_<%= tag.id %>" aria-expanded="true" aria-controls="collapse<%= category.id %>">
                        <div class="panel-heading" role="tab" id="headingOne">
                          <h4 class="panel-title text-center">
                              <%= link_to tag.name, "#", data: { toggle: "modal", target: "#document" } %> - <%= tag.complete_for?(current_user) %>
                          </h4>
                        </div>
                      </a>
                      <div id="collapse_tag_<%= tag.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">
                          <% current_user.documents.where(tag: tag).each do |document| %>
                            <%= render 'modal', document: document  %>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
